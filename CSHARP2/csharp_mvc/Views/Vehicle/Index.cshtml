@using CSHARP2;
@model List<IVehicle>

<h2>Voertuigen</h2>

@if (Model == null || Model.Count == 0)
{
    <p>Geen voertuigen beschikbaar.</p>
}
else
{
    <table border="1">
        <tr>
            <th>Type</th>
            <th>Kleur</th>
            <th>Snelheid</th>
            <th>Acties</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].GetType().Name</td>
                <td>@Model[i].Kleur</td>
                <td>@Model[i].Snelheid km/u</td>
                <td>
                    <a href="@Url.Action("Accelerate", "Vehicle", new { id = i })">Versnel</a> |
                    <a href="@Url.Action("Decelerate", "Vehicle", new { id = i })">Vertraag</a> |
                    <a href="@Url.Action("ShowSpeed", "Vehicle", new { id = i })">Toon Snelheid</a>
                </td>
            </tr>
        }
    </table>
}

@if (ViewBag.Message != null)
{
    <p><strong>@ViewBag.Message</strong></p>
}
