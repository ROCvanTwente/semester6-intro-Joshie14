@model CSHARP2.IAnimal

@{
    ViewBag.Title = "Edit Animal";
}

<h2>Edit Animal</h2>

<form action="@Url.Action("Edit", "Animals")" method="post">
    <input type="hidden" name="name" value="@Model.Name" />

    <div class="form-group">
        <label>Name:</label>
        <input type="text" name="newName" value="@Model.Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Weight (kg):</label>
        <input type="number" step="0.1" name="weight" value="@Model.Weight" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Age:</label>
        <input type="number" name="age" value="@Model.Age" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Animals")" class="btn btn-secondary">Cancel</a>
</form>
